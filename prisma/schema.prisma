// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Pokemon {
  id     Int    @id @default(autoincrement())
  name   String @unique
  number Int    @unique
  type   Type[]
}

model Type {
  id      Int       @id @default(autoincrement())
  name    String    @unique
  pokemon Pokemon[]
}
